<div id="main" class="container">
  <div class="columns">
    <div class="column col-4 col-sm-12 col-mx-auto">
      <div class="card">
        <div class="card-header">

          <h4 class="card-title">Login</h4>
        </div>
        <div class="card-body">
          <form action="/login-post" method="post" id="formlogin">
            <div class="form-group">
              <label class="form-label" for="username">Username</label>
              <input
                class="form-input"
                type="text"
                id="username"
                name="username"
                placeholder="Enter your username"
              />
            </div>
            <div class="form-group">
              <label class="form-label" for="password">Password</label>
              <input
                class="form-input"
                type="password"
                id="password"
                name="password"
                placeholder="Enter your password"
              />
            </div>
            <span>Need an account? <a href="/register">sign up</a></span>
            {{#if error}}
              <p class="error">{{error}}</p>
            {{/if}}
            <input
              class="btn my-3 custom-button btn-block"
              type="submit"
              value="login"
            />
          </form>
        </div>

      </div>
    </div>
  </div>
</div>